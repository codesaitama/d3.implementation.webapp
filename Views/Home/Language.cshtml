@{
    ViewData["Title"] = "Language";
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="form-group row app-header-row">
                <div class="col-md-3 text-right">
                    <div class="input-group add-on">
                        <input class="form-control" placeholder="Search Language" name="srchTerm" id="srchTerm" type="text" style="font-size: 12px" />
                        <div class="input-group-btn">
                            <button class="btn" type="submit" id="btnSearch" style="border: 1px solid #cad1d7; "><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
                <div class="col-md-3"></div>
                <div class="col-md-6 text-right">
                    <button class="btn btn-primary text-right project-add-button" id="btnAddLanguage">Add @ViewData["Title"]</button>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Project</th>
                            <th scope="col">Code</th>
                            <th scope="col">Description</th>
                            <th scope="col">Status</th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="language-tbody"></tbody>
                </table>
            </div>
            <div class="card-footer py-4">
                <nav aria-label="...">
                    <ul class="pagination justify-content-end mb-0">
                        <li class="page-item">
                            <select id="page-size" class="form-control" style="height: calc(2.15rem + 2px); font-size:12px">
                                <option value="5">5</option>
                                <option value="10">10</option>
                                <option value="15">15</option>
                                <option value="20">20</option>
                            </select>
                        </li>
                        &nbsp;
                        &nbsp;
                        &nbsp;
                        &nbsp;
                        &nbsp;
                        &nbsp;
                        <li class="page-item disabled" id="prev-li" data-mypage="0">
                            <a class="page-link" href="#" tabindex="-1">
                                <i class="fas fa-angle-left"></i>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item" id="next-li" data-mypage="1">
                            <a class="page-link" href="#">
                                <i class="fas fa-angle-right"></i>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

@section Modals{
    <div class="modal fade" id="languageModal" role="dialog" data-backdrop="static" data-keyboard="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> <i class="far fa-times-circle text-danger"></i> </button>
                </div>
                <form class="form-horizontal" id="languageForm">
                    <div class="modal-body">
                        
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label class="control-label">Project</label><i class="text-danger"> &nbsp;*</i>
                                <select class="form-control" id="slctProject"></select>
                            </div>
                            <div class="col-md-6">
                                <label class="control-label">English</label>
                                <input class="form-control" type="text" name="english" id="english" required />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label class="control-label">French</label>
                                <input class="form-control" type="text" name="french" id="french" required />
                            </div>
                            <div class="col-md-6">
                                <label class="control-label">Spanish</label>
                                <input class="form-control" type="text" name="spanish" id="spanish" required />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label class="control-label">Portuguese</label>
                                <input class="form-control" type="text" name="portuguese" id="portuguese" required />
                            </div>
                            <div class="col-md-6">
                                <label class="control-label">German</label>
                                <input class="form-control" type="text" name="german" id="german" required />
                            </div>
                            
                        </div>
                        <div class="form-group row">
                            <div class="col-md-2" style="margin-top: 10px;">
                                <label class="control-label">Status</label>
                                <input type="checkbox" id="switch" /><label for="switch" class="label-checkbox">Toggle</label>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="pull-left"></div>
                        <button type="button" class="btn btn-success btn-sm" id="btnSave">Save</button>
                        <button type="reset" class="btn btn-link text-danger btn-sm" id="btnClose">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script src="~/js/saitama/PageJSFiles/Language.js" asp-append-version="true"></script>
}

