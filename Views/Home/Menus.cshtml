
@{
    ViewData["Title"] = "Menus";
}
@section Styles{
    <link href="~/css/jquery.treetable.css" rel="stylesheet" />
    <link href="~/css/tree.view.css" rel="stylesheet" />
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="form-group row app-header-row">
                <div class="col-md-3">
                    <select class="form-control" id="slctProject"></select>
                </div>
                <div class="col-md-3">
                    <select class="form-control" id="slctApplication"></select>
                </div>
                <div class="col-md-3 text-right">
                    <div class="input-group add-on">
                        <input class="form-control" placeholder="Search menu, controller or method name " name="srchTerm" id="srchTerm" type="text" disabled style="font-size: 12px" />
                        <div class="input-group-btn">
                            <button class="btn form-control" type="submit" id="btnSearch" style="border: 1px solid #cad1d7; " disabled><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 text-right">
                    <div class="text-right">
                        <button class="btn btn-primary text-right project-add-button" id="btnAddMenu" disabled>Add @ViewData["Title"]</button>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush" id="tree">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Menu Name</th>
                            <th scope="col">Status</th>
                            <th scope="col">Controller</th>
                            <th scope="col">Method</th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="menus-tbody"></tbody>
                </table>
            </div>
            <div class="card-footer py-4">
                <nav aria-label="...">
                    <ul class="pagination justify-content-end mb-0">
                        <li class="page-item">
                            <a class="page-link" href="#" tabindex="-1">
                                <i class="fa fa-angle-left"></i>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">
                                <i class="fa fa-angle-right"></i>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        
        </div>
    </div>
</div>

@section Modals{
    <div class="modal fade" id="menusModal" role="dialog" data-backdrop="static" data-keyboard="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> <i class="far fa-times-circle text-danger"></i> </button>
                </div>
                <form class="form-horizontal" id="appForm">
                    <div class="modal-body">
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label class="control-label">Name</label><i class="text-danger"> &nbsp;*</i>
                                <input class="form-control" type="text" name="txtName" id="txtName" required />
                            </div>
                            
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label class="control-label">Controller</label>
                                <input class="form-control" type="text" name="txtController" id="txtController" required />
                            </div>
                            <div class="col-md-6">
                                <label class="control-label">Method</label><i class="text-danger"> &nbsp;*</i>
                                <input class="form-control" type="text" name="txtMethod" id="txtMethod" required />
                            </div>
                           
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label class="control-label">Parent</label><i class="fa fa-info-circle" title="Click the parent input field to select menu parent. Leave blank if menu is a main menu."></i>
                                <input class="form-control" type="text" name="txtParent" id="txtParent" required />
                            </div>
                            <div class="col-md-4"></div>
                            <div class="col-md-2" style="margin-top: 10px;">
                                <label class="control-label">Status</label>
                                <input type="checkbox" id="switch" /><label for="switch" class="label-checkbox">Toggle</label>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label class="control-label">Description</label>
                                <textarea class="form-control" rows="3" id="notes"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <div class="pull-left"></div>
                        <button type="button" class="btn btn-success btn-sm" id="btnSaveMenu">Save</button>
                        <button type="reset" class="btn btn-link text-danger btn-sm" id="btnClear">Clear</button>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="parentMenuModal" role="dialog" data-backdrop="static" data-keyboard="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> <i class="far fa-times-circle text-danger"></i> </button>
                </div>
                <form class="form-horizontal" id="menus-form">
                    <div class="modal-body">
                        <div id="menu-tree-list" class="custom-md5">
                            <span class="list-group-item tt"><span id="00000000-0000-0000-0000-000000000000" class="all-span" style="color: rgb(82, 95, 127); font-size: 13px;">Main Menu</span></span>
                            
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="pull-left">
                        </div>
                        <button type="button" class="btn btn-success btn-sm" id="btnOkay">Proceed</button>
                        <button type="button" class="btn btn-link text-danger btn-sm" id="btnStop">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script src="~/js/jquery.treetable.js"></script>
    <script src="~/js/saitama/PageJSFiles/Menus.js" asp-append-version="true"></script>
}

